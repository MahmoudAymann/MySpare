<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spectraapps.myspare.SplashScreen">

    <ImageView
        android:id="@+id/splach_screen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/logoscreen"
        android:scaleType="fitXY"
        android:src="@drawable/app_logo" />

    <Button
        android:id="@+id/btn_ar"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitXY"
        android:text="عربى"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_en"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="English"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ar"
        android:layout_alignEnd="@+id/btn_ar"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="45dp"
        android:text="إختر اللغة"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_en"
        android:layout_alignStart="@+id/btn_en"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:text="choose language"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
